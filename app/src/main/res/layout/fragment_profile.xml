<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DFDEDE">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:elevation="10dp"
                android:background="#FFFFFF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/imagecircle"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="80dp"
                            app:cardCornerRadius="30dp"

                            >

                            <ImageView
                                android:id="@+id/imageProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:elevation="15dp" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_profileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Pengguna"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_profileNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+62 852 1234 5678" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="Account"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_account_circle_24_black"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Ubah Profile"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Ganti Password"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnReferral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_local_movies_24_black"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Kode Referral"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnSignout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_power_settings_new_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Sign Out"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                android:elevation="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="Settings"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btnSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_settings_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Settings"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnPrivacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Privacy Shortcut"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_help_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Help Center"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_menu_book_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Terms &amp; Policies"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_warning_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Report a Problem"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="About"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btnVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_account_circle_24_black"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Version"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnSyarat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="    Syarat dan Ketentuan"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#DFDEDE"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>