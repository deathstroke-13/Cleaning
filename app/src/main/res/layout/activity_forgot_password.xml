<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    tools:context=".ForgotPasswordActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/testlogo"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Forgot Password"
        android:textColor="#000000"
        android:transitionName="trans_brand"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="end"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Please input your username or email\nWe will send the email for password\nrecovery to your email."
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_name_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:transitionName="trans_username"

        android:hint="Username / Email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:paddingTop="20dp"
        >
        <Button
            android:id="@+id/btn_sendForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textAllCaps="false"
            android:background="#58ADBC"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>