<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/imageCatalog"
                android:scaleType="centerCrop"
                android:src="@drawable/brochure"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleName"
                android:textColor="#262626"
                android:layout_below="@id/imageCatalog"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="One Jobs"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descName"
                android:layout_below="@id/titleName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="3"
                android:text="Description for the daily jobs or anything"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>