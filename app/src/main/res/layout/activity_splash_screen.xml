<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/testsplash">

    <ImageView
        android:id="@+id/logo_splash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:transitionName="trans_image"
        android:src="@drawable/testlogo"
        android:layout_centerInParent="true"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/brand_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_splash"
        android:transitionName="trans_brand"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="TEST LOGO"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brand_splash"
        android:transitionName="trans_slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="We Make Better Future"
        android:textSize="18sp"
        android:textColor="#C1C1C1"/>
</RelativeLayout>